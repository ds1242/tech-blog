<article class="post">
    <div class="title">
        <h2>{{post.title}}</h2>
    </div>
    <div class="meta">
        By {{post.user.username}} on {{format_date post.created_at}}
    </div>
    <br>
    <p>{{post.post_text}}</p>    
</article>
<br>

{{#if loggedIn}}
<form class="comment-form" id="comment-text-form">
    <div>
        <textarea name="comment" id="comment-text" placeholder="Add A Comment"></textarea>
    </div>

    <div>
        <button type="submit" class="btn btn-secondary" >Add Comment</button>
    </div>
</form>
{{/if}}
<div class="comments container">
    {{> comments post.comments}}
</div>   

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}