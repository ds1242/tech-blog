<div class="post card bg-light mb-3">
    <div class="card-header">
        <a href="/posts/{{id}}">{{title}}</a>
    </div>
        <div class="card-body">
            <p class="card-text">{{post_text}}</p>
            <div class="meta">
            By {{user.username}} on 
                {{format_date created_at}}
                |
            <a href="/posts/{{id}}"> {{comments.length}} {{format_plural "comment" comments.length}} </a>
            </div>
        </div>    
</div>
